{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "title": { "enum": ["pi", "postdoc", "phd", "master", "intern"] },
          "picture": { "$ref": "#/definitions/filename" },
          "website": { "type": "string" },
          "period": {
            "type": "object",
            "properties": {
              "start": { "$ref": "#/definitions/date" }
            },
            "required": [ "start" ]
          },
          "cosupervisor": { "type": "string" },
          "topics": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "en": { "type": "string" },
                    "fr": { "type": "string" }
                },
                "required": [ "en", "fr" ]
            }
          },
          "collage_column_start": { "type": "number" }
        },
        "required": [
          "name",
          "title",
          "period"
        ]
    },
    "definitions": {
        "filename": {
            "type": "string",
            "pattern": "^[a-z_-]+$",
            "example": "firstname-lastname.jpg"
        },
        "date": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
            "example": "2019-05-17"
        }
    }
}
